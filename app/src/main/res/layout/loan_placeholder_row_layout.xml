<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginVertical="4dp">

    <View
        android:id="@+id/image_placeholder"
        android:layout_width="70dp"
        android:layout_height="82dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/placeholderColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_placeholder" />

    <View
        android:id="@+id/title_placeholder"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:background="@color/placeholderColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/description_placeholder"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:background="@color/placeholderColor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image_placeholder"
        app:layout_constraintTop_toTopOf="@+id/image_placeholder" />

    <View
        android:id="@+id/total_price_holder"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/placeholderColor"
        app:layout_constraintStart_toStartOf="@+id/description_placeholder"
        app:layout_constraintTop_toBottomOf="@+id/description_placeholder" />

    <View
        android:id="@+id/price_holder"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/placeholderColor"
        app:layout_constraintStart_toStartOf="@+id/total_price_holder"
        app:layout_constraintTop_toBottomOf="@+id/total_price_holder" />
</androidx.constraintlayout.widget.ConstraintLayout>